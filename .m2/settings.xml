<?xml version="1.0" encoding="UTF-8"?>
<settings xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/SETTINGS/1.0.0"
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0 https://maven.apache.org/xsd/settings-1.0.0.xsd">
    <profiles>

        <profile>
            <id>know-how-nexus</id>
            <properties>
                <altSnapshotDeploymentRepository>kh-contrib-snapshots-repo::https://know-how.nexus/repository/maven-snapshots</altSnapshotDeploymentRepository>
                <altReleaseDeploymentRepository>kh-contrib-releases-repo::https://know-how.nexus/repository/maven-releases</altReleaseDeploymentRepository>
            </properties>
        </profile>
        <profile>
            <id>kh-contrib-snapshots-repo</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <repositories>
                <repository>
                    <id>kh-contrib-snapshots-repo</id>
                    <url>https://know-how.nexus/repository/maven-snapshots</url>
                    <releases>
                        <enabled>false</enabled>
                        <updatePolicy>never</updatePolicy>
                    </releases>
                    <snapshots>
                        <enabled>true</enabled>
                    </snapshots>
                </repository>
            </repositories>
            <pluginRepositories>
                <pluginRepository>
                    <id>kh-contrib-snapshots-plugin-repo</id>
                    <url>https://know-how.nexus/repository/maven-snapshots</url>
                    <releases>
                        <enabled>false</enabled>
                        <updatePolicy>never</updatePolicy>
                    </releases>
                    <snapshots>
                        <enabled>true</enabled>
                    </snapshots>
                </pluginRepository>
            </pluginRepositories>
        </profile>
        <profile>
            <id>kh-contrib-releases-repo</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <repositories>
                <repository>
                    <id>maven-central</id>
                    <url>https://repo1.maven.org/maven2/</url>
                    <releases>
                        <enabled>true</enabled>
                    </releases>
                    <snapshots>
                        <enabled>false</enabled>
                    </snapshots>
                </repository>
                <repository>
                    <id>confluent</id>
                    <url>https://packages.confluent.io/maven/</url>
                    <releases>
                        <enabled>true</enabled>
                    </releases>
                    <snapshots>
                        <enabled>false</enabled>
                    </snapshots>
                </repository>
                <repository>
                    <id>kh-contrib-releases-repo</id>
                    <url>https://know-how.nexus/repository/maven-releases</url>
                    <releases>
                        <enabled>true</enabled>
                        <updatePolicy>never</updatePolicy>
                    </releases>
                    <snapshots>
                        <enabled>false</enabled>
                    </snapshots>
                </repository>
            </repositories>
            <pluginRepositories>
                <pluginRepository>
                    <id>kh-contrib-releases-plugin-repo</id>
                    <url>https://know-how.nexus/repository/maven-releases</url>
                    <releases>
                        <enabled>true</enabled>
                        <updatePolicy>never</updatePolicy>
                    </releases>
                    <snapshots>
                        <enabled>false</enabled>
                    </snapshots>
                </pluginRepository>
            </pluginRepositories>
        </profile>
    </profiles>

    <activeProfiles>      
        <activeProfile>kh-contrib-snapshots-repo</activeProfile>
        <activeProfile>kh-contrib-releases-repo</activeProfile>
        <activeProfile>know-how-nexus</activeProfile>
    </activeProfiles>
</settings>